# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=JobHelp AI API
VERSION=3.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database Configuration
# Option 1: Use full DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/jobhelp

# Option 2: Use individual components
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=jobhelp
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Redis Configuration
# Option 1: Use full REDIS_URL (recommended for Upstash)
REDIS_URL=rediss://username:password@host:port/database

# Option 2: Use individual components
REDIS_HOST=your_redis_host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_SSL=true

# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here
PARALLEL_API_KEY=your_parallel_api_key_here

# Google API Configuration
GOOGLE_KNOWLEDGE_GRAPH_API_KEY=your_google_knowledge_graph_api_key_here
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# LLM Provider Selection
DEFAULT_LLM_PROVIDER=gemini
FALLBACK_LLM_PROVIDER=openai

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=[".pdf", ".docx", ".txt"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/app.log

# NLTK Data
NLTK_DATA_PATH=nltk_data

# AI Usage Limits
FREE_TIER_DAILY_LIMIT=10
PREMIUM_TIER_DAILY_LIMIT=100

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here

# Frontend URLs
FRONTEND_URL=http://localhost:3000
AUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# Email Configuration - Resend API (recommended)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@jobhelp.ai

# Legacy SMTP Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Google Services Configuration
GOOGLE_KNOWLEDGE_GRAPH_API_KEY=your_google_knowledge_graph_api_key_here
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
